<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MySac" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/pumpkin</item>
         <item name="colorSecondary">@color/amber</item>
    </style>

    <style name="Theme.MySac" parent="Base.Theme.MySac">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ThemeOverlay.MyApp.Button" parent="">
        <item name="android:background">@drawable/button_background</item>
    </style>

    <!-- Round -->
    <style name="RoundCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>

    <!-- Bottomed Round -->
    <style name="BottomedCorner" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>